{
  "version": 2,
  "builds": [
    {
      "src": "./backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "./frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/auth/(.*)", "destination": "/backend/index.js" },
    { "source": "/services/(.*)", "destination": "/backend/index.js" },
    { "source": "/appointments/(.*)", "destination": "/backend/index.js" },
    { "source": "/reviews/(.*)", "destination": "/backend/index.js" },
    
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}

